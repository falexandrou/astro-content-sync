{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
     "module": "nodenext",
     "moduleResolution": "nodenext",
     "esModuleInterop": true,
     "outDir": "dist",
     "rootDir": "src",
     "declaration": true,
     "resolveJsonModule": true,
     "target": "es2018",
     "paths": {
       "~/*": ["./src/*"]
     }
  },
}
